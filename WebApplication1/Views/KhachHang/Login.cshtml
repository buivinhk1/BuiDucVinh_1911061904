
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo Trang Login</title>
    <link rel="stylesheet" href="~/Content/dangkydangnhap.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
</body>
</html>
@using (Html.BeginForm())
{
    <form action="#" method="post">
        @Html.ValidationSummary(true)
        <section>
            <!--Bắt Đầu Phần Hình Ảnh-->
            <div class="img-bg">
                @*<img src="https://niemvuilaptrinh.ams3.cdn.digitaloceanspaces.com/tao_trang_dang_nhap/hinh_anh_minh_hoa.jpg" alt="Hình Ảnh Minh Họa">*@
            </div>
            <!--Kết Thúc Phần Hình Ảnh-->
            <!--Bắt Đầu Phần Nội Dung-->
            <div class="noi-dung">
                <div class="form">
                    <h2>Trang Đăng Nhập</h2>
                    <form action="">
                        <h4 style="color:red; background-color:snow;text-align:center;border-radius:20%;">@ViewBag.ThongBao</h4>
                       
                        <div class="input-form">
                            <span>Số Điện Thoại(Em đã tạo sẳn là 123)</span>
                            <input type="text" name="TaiKhoan">
                        </div>
                        <div class="input-form">
                            <input type="submit" value="Đăng Nhập">
                        </div>
                        <div class="input-form">
                            <p>Bạn Chưa Có Tài Khoản? <a href="@Url.Action("Create", "KhachHang")">Đăng Ký</a></p>
                            <p>Về <a href="@Url.Action("Index", "Home")">Trang Chủ</a> </p>
                        </div>
                    </form>
                </div>
            </div>
            <!--Kết Thúc Phần Nội Dung-->
        </section>
    </form>
}



